---
export interface Props {
	song: {
		title: string
		artist?: string
	}
}
const { song } = Astro.props as Props
---

<header>
	<img id='logo'
			 src="/img/logo.png" />
	<div><span></span></div>
	<div id="title">
		<h1 class="song-title">{song.title}</h1>
		<div id="song-artist-container">
			<img id='mic'
					 src="/img/mic.png"
					 alt="">
			<h2 class="song-artist">{song.artist}</h2>
		</div>
	</div>
</header>